{
  "name": "serizawa",
  "description": "アイドルマスターシャイニーカラーズの非公式専用ブラウザ",
  "author": {
    "name": "arrow2nd",
    "email": "arrow2nd_workspace@zohomail.com"
  },
  "license": "MIT",
  "version": "1.0.3",
  "main": "./build/main.js",
  "private": true,
  "scripts": {
    "start": "run-s clean build serve",
    "start:dev": "run-s clean build:dev serve",
    "clean": "rimraf ./build",
    "clean:dist": "rimraf \"./dist/!(*.exe|*.deb|*.AppImage|*.dmg)\"",
    "build": "cross-env NODE_ENV=\"production\" webpack",
    "build:dev": "cross-env NODE_ENV=\"development\" webpack",
    "serve": "electron .",
    "pack:win": "electron-builder --win --x64",
    "pack:mac": "electron-builder --mac --x64",
    "pack:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.arrow2nd.serizawa",
    "productName": "serizawa",
    "artifactName": "${name}-${version}.${ext}",
    "files": [
      "./build/**/*"
    ],
    "directories": {
      "output": "./dist"
    },
    "win": {
      "target": "nsis",
      "icon": "./src/images/win-icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "target": "dmg",
      "icon": "./src/images/mac-icon.png",
      "category": "public.app-category.games"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "./src/images/win-icon.png",
      "category": "Game"
    },
    "publish": null
  },
  "devDependencies": {
    "@types/copy-webpack-plugin": "^8.0.1",
    "@types/mini-css-extract-plugin": "^2.2.0",
    "@types/node": "^16.7.8",
    "@types/react": "^17.0.19",
    "@types/react-dom": "^17.0.9",
    "@types/tailwindcss": "^2.2.1",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "autoprefixer": "^10.3.3",
    "copy-webpack-plugin": "^9.0.1",
    "cross-env": "^7.0.3",
    "css-loader": "^6.2.0",
    "electron": "^14.0.0",
    "electron-builder": "^22.11.7",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.25.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "html-webpack-plugin": "^5.3.2",
    "mini-css-extract-plugin": "^2.2.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.6",
    "postcss-loader": "^6.1.1",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "tailwindcss": "^2.2.9",
    "ts-loader": "^9.2.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.2",
    "webpack": "^5.51.1",
    "webpack-cli": "^4.8.0"
  },
  "dependencies": {
    "@trodi/electron-splashscreen": "^1.0.2",
    "electron-store": "^8.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.2.0"
  }
}
