{
  "name": "serizawa",
  "description": "アイドルマスターシャイニーカラーズの非公式専用ブラウザ",
  "author": {
    "name": "arrow2nd",
    "email": "arrow2nd_workspace@zohomail.com"
  },
  "license": "MIT",
  "version": "1.1.0",
  "main": "./build/main.js",
  "private": true,
  "scripts": {
    "start": "run-s clean build serve",
    "start:dev": "run-s clean build:dev serve",
    "clean": "rimraf ./build",
    "clean:dist": "rimraf \"./dist/!(*.exe|*.deb|*.AppImage|*.dmg)\"",
    "build": "cross-env NODE_ENV=\"production\" webpack",
    "build:dev": "cross-env NODE_ENV=\"development\" webpack",
    "serve": "electron .",
    "pack:win": "electron-builder --win --x64",
    "pack:mac": "electron-builder --mac --x64",
    "pack:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.arrow2nd.serizawa",
    "productName": "serizawa",
    "artifactName": "${name}-${version}.${ext}",
    "files": [
      "./build/**/*"
    ],
    "directories": {
      "output": "./dist"
    },
    "win": {
      "target": "nsis",
      "icon": "./src/images/win-icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "target": "dmg",
      "icon": "./src/images/mac-icon.png",
      "category": "public.app-category.games"
    },
    "linux": {
      "target": "AppImage",
      "icon": "./src/images/win-icon.png",
      "category": "Game"
    },
    "publish": null
  },
  "devDependencies": {
    "@types/copy-webpack-plugin": "^10.1.0",
    "@types/mini-css-extract-plugin": "^2.4.0",
    "@types/node": "^16.11.10",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "@types/tailwindcss": "^2.2.4",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "autoprefixer": "^10.4.0",
    "copy-webpack-plugin": "^10.1.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.5.1",
    "electron": "14.2.1",
    "electron-builder": "^22.14.5",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "html-webpack-plugin": "^5.5.0",
    "mini-css-extract-plugin": "^2.4.5",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.5",
    "postcss-loader": "^6.2.1",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.0.5",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1"
  },
  "dependencies": {
    "@trodi/electron-splashscreen": "^1.0.2",
    "axios": "^0.24.0",
    "electron-store": "^8.0.1",
    "node": "^16.13.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.3.1"
  }
}
