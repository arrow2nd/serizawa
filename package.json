{
  "name": "serizawa",
  "description": "アイドルマスターシャイニーカラーズの非公式専用ブラウザ",
  "author": {
    "name": "arrow2nd",
    "email": "dev@arrow2nd.com"
  },
  "license": "MIT",
  "version": "2.1.4",
  "main": "./build/main.js",
  "private": true,
  "scripts": {
    "start": "run-s clean build serve",
    "start:dev": "run-s clean build:dev serve",
    "clean": "rimraf ./build",
    "clean:dist": "rimraf \"./dist/!(*.exe|*.deb|*.AppImage|*.dmg)\"",
    "build": "cross-env NODE_ENV=\"production\" webpack",
    "build:dev": "cross-env NODE_ENV=\"development\" webpack",
    "serve": "electron .",
    "pack:win": "electron-builder --win --x64",
    "pack:mac": "electron-builder --mac --x64",
    "pack:linux": "electron-builder --linux",
    "fmt": "prettier --write ."
  },
  "build": {
    "appId": "com.arrow2nd.serizawa",
    "productName": "serizawa",
    "artifactName": "${name}-${version}.${ext}",
    "files": [
      "./build/**/*"
    ],
    "directories": {
      "output": "./dist"
    },
    "win": {
      "target": "nsis",
      "icon": "./src/images/win-icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "target": "dmg",
      "icon": "./src/images/mac-icon.png",
      "category": "public.app-category.games"
    },
    "linux": {
      "target": "AppImage",
      "icon": "./src/images/win-icon.png",
      "category": "Game"
    },
    "publish": null
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^3.2.0",
    "@types/mini-css-extract-plugin": "^2.5.1",
    "@types/node": "^17.0.31",
    "@types/react": "^18.0.8",
    "@types/react-dom": "^18.0.3",
    "@types/tailwindcss": "^3.0.10",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "autoprefixer": "^10.4.7",
    "copy-webpack-plugin": "^10.2.4",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.1",
    "electron": "17.4.2",
    "electron-builder": "^23.0.3",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.5.0",
    "html-webpack-plugin": "^5.5.0",
    "mini-css-extract-plugin": "^2.6.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.13",
    "postcss-loader": "^6.2.1",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.0.24",
    "ts-loader": "^9.3.0",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "@trodi/electron-splashscreen": "^1.0.2",
    "axios": "^0.27.2",
    "electron-store": "^8.0.1",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-icons": "^4.3.1"
  },
  "packageManager": "yarn@3.1.1"
}
